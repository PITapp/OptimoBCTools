{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "BcScanDevice"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "type": "execute",
                        "code": "await this.grid0.InsertRow(new OptimoBcTools.Models.DbOptimoBcLive.BcScanDevice())"
                      }
                    ]
                  }
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "filterMode": "advanced",
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getBcScanDevicesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "dbOptimoBCLive.getBcScanDevices",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getBcScanDevicesResult",
                            "type": "set",
                            "value": "${result.Value.AsODataEnumerable()}",
                            "valueType": "IEnumerable<OptimoBcTools.Models.DbOptimoBcLive.BcScanDevice>"
                          },
                          {
                            "name": "getBcScanDevicesCount",
                            "type": "set",
                            "value": "${result.Count}",
                            "valueType": "int"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load BcScanDevices",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ],
                    "rowUpdate": [
                      {
                        "name": "dbOptimoBCLive.updateBcScanDevice",
                        "parameters": [
                          {
                            "name": "DeviceID",
                            "value": "${event.DeviceID}"
                          },
                          {
                            "name": "BcScanDevice",
                            "value": "${event}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowCreate": [
                      {
                        "name": "dbOptimoBCLive.createBcScanDevice",
                        "parameters": [
                          {
                            "name": "BcScanDevice",
                            "value": "${event}"
                          }
                        ],
                        "type": "invoke",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "DeviceNummer",
                      "title": "Device Nummer",
                      "editTemplate": [
                        {
                          "name": "DeviceNummer",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "textbox",
                          "value": "${data.DeviceNummer}"
                        }
                      ]
                    },
                    {
                      "property": "RegistriertAm",
                      "formatString": "{0:d}",
                      "title": "Registriert Am",
                      "editTemplate": [
                        {
                          "name": "RegistriertAm",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "datepicker",
                          "value": "${data.RegistriertAm}"
                        }
                      ]
                    },
                    {
                      "property": "DeviceTitel",
                      "title": "Device Titel",
                      "editTemplate": [
                        {
                          "name": "DeviceTitel",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "textbox",
                          "value": "${data.DeviceTitel}"
                        }
                      ]
                    },
                    {
                      "property": "Info",
                      "title": "Info",
                      "editTemplate": [
                        {
                          "name": "Info",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "textbox",
                          "value": "${data.Info}"
                        }
                      ]
                    },
                    {
                      "property": "DeviceID",
                      "title": "Device ID"
                    },
                    {
                      "property": "DeviceBezeichnung",
                      "title": "Device Bezeichnung",
                      "editTemplate": [
                        {
                          "name": "DeviceBezeichnung",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "textbox",
                          "value": "${data.DeviceBezeichnung}"
                        },
                        {
                          "type": "required-validator",
                          "popup": true,
                          "component": "DeviceBezeichnung"
                        }
                      ]
                    },
                    {
                      "property": "Abteilung",
                      "title": "Abteilung",
                      "editTemplate": [
                        {
                          "name": "Abteilung",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "textbox",
                          "value": "${data.Abteilung}"
                        }
                      ]
                    },
                    {
                      "property": "AnmeldungAm",
                      "formatString": "{0:d}",
                      "title": "Anmeldung Am",
                      "editTemplate": [
                        {
                          "name": "AnmeldungAm",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "datepicker",
                          "value": "${data.AnmeldungAm}"
                        }
                      ]
                    },
                    {
                      "property": "AbmeldungAm",
                      "formatString": "{0:d}",
                      "title": "Abmeldung Am",
                      "editTemplate": [
                        {
                          "name": "AbmeldungAm",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "datepicker",
                          "value": "${data.AbmeldungAm}"
                        }
                      ]
                    },
                    {
                      "property": "DeviceTyp",
                      "title": "Device Typ",
                      "editTemplate": [
                        {
                          "name": "DeviceTyp",
                          "style": {
                            "width": "100%",
                            "display": "block"
                          },
                          "type": "textbox",
                          "value": "${data.DeviceTyp}"
                        }
                      ]
                    },
                    {
                      "editTemplate": [
                        {
                          "events": {
                            "click": [
                              {
                                "code": "${this.grid0.UpdateRow(data)}",
                                "type": "execute"
                              }
                            ]
                          },
                          "icon": "save",
                          "name": "saveButton",
                          "size": "sm",
                          "text": "",
                          "type": "button"
                        },
                        {
                          "buttonStyle": "secondary",
                          "events": {
                            "click": [
                              {
                                "code": "${this.grid0.CancelEditRow(data)}",
                                "type": "execute"
                              },
                              {
                                "code": "${await this.Load()}",
                                "type": "execute"
                              },
                              {
                                "code": "${await this.grid0.Reload()}",
                                "type": "execute"
                              }
                            ]
                          },
                          "icon": "cancel",
                          "name": "cancelButton",
                          "size": "sm",
                          "text": "",
                          "type": "button"
                        }
                      ],
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "events": {
                            "click": [
                              {
                                "code": "${this.grid0.EditRow(data)}",
                                "type": "execute"
                              }
                            ]
                          },
                          "icon": "edit",
                          "name": "editButton",
                          "size": "sm",
                          "text": "",
                          "type": "button"
                        }
                      ],
                      "textAlign": "center",
                      "width": "70px"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "width": "70px",
                      "textAlign": "center",
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete BcScanDevice",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "dbOptimoBCLive.deleteBcScanDevice",
                                "parameters": [
                                  {
                                    "name": "DeviceID",
                                    "value": "${data.DeviceID}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null && result.StatusCode == System.Net.HttpStatusCode.NoContent",
                                    "type": "execute"
                                  },
                                  {
                                    "condition": "result != null && result.StatusCode != System.Net.HttpStatusCode.NoContent",
                                    "detail": "Unable to delete BcScanDevice",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "datagrid",
                  "count": "${getBcScanDevicesCount}",
                  "itemType": "OptimoBcTools.Models.DbOptimoBcLive.BcScanDevice"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "bcscandevice",
        "type": "set",
        "value": "new OptimoBcTools.Models.DbOptimoBcLive.BcScanDevice(){}",
        "valueType": "OptimoBcTools.Models.DbOptimoBcLive.BcScanDevice"
      }
    ]
  },
  "name": "BcScanDevice",
  "layout": "MainBCScanAdmin"
}